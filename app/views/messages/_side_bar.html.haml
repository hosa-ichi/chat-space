.SideBar
  .header
    .items
      .items--name
        = current_user.name
      .items--icons
        .edit
          = link_to new_group_path do
            = icon('fa', 'pen-square', class: 'edit--icon')
        .cog
          = link_to edit_user_path(current_user) do
            = icon('fas', 'cog', class: 'cog--icon')
  .GroupList
    - current_user.groups.each do |group|
      .items
        = link_to group_messages_path(group) do
          .name
            = group.name
          .message
            = group.show_last_message